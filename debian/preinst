#!/bin/sh
set -e

case $1 in
    install|upgrade)
        conflicts="
        /etc/skel/.face
        /usr/share/gnome-shell/gnome-shell-theme.gresource
        /usr/share/sddm/themes/breeze/theme.conf.user
        "
        for i in $conflicts
        do
            dpkg-divert --package radxa-desktop-branding --divert "$i.bak" --rename "$i"
        done
        ;;
esac
    
#DEBHELPER#

exit 0
